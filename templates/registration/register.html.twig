{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
   <div class="main-content p-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm, {'class': 'text-center mx-auto', 'style': 'max-width: 70%'}) }}
                    <div class="mb-3">
                        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword, {
                            'label': 'Mot de passe',
                            'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}
                        }) }}
                    </div>

                    <div class="mb-3 form-check">
                        {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
                            J'accepte les termes et conditions
                        </label>
                    </div>

                    <button type="submit" class="btn btn-dark btn-lg">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
