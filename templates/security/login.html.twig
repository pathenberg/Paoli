{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="main-content p-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form method="post" class="text-center mx-auto" style="max-width: 70%;">
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>

                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-dark btn-lg" type="submit">Se connecter</button>

                    <p class="mt-3">Vous n'avez pas encore de compte? <a href="{{ path('app_register') }}" style="color: black;">Inscription</a></p>
                    <a href="{{ path('app_forgot_password_request') }}" style="color: black;">Mot de passe oubli√©</a>
                </form>
            </div>
        </div>
    </div>
</div>


{% endblock %}
