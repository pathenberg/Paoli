{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
  <div class="main-content p-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="h3 mb-3 font-weight-normal">Réinitialisation du mot de passe</h1>

                {{ form_start(resetForm, {'class': 'text-center mx-auto', 'style': 'max-width: 70%'}) }}
                <div class="mb-3">
                    {{ form_row(resetForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe'}}) }}
                </div>

                <button class="btn btn-dark btn-lg">Réinitialiser le mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
